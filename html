<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Одностраничное приложение с History API</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            background-color: #f5f5f5;
        }
        nav {
            width: 100%;
            background-color: #333;
            overflow: hidden;
        }
        nav a {
            float: left;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }
        nav a:hover {
            background-color: #ddd;
            color: black;
        }
        nav a.router-link-active {
            background-color: #4CAF50;
            color: white;
        }
        .content {
            margin-top: 20px;
            padding: 20px;
            width: 80%;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        @media screen and (max-width: 600px) {
            nav a {
                float: none;
                display: block;
                text-align: left;
            }
        }
    </style>
</head>
<body>

<nav>
    <a href="/" onclick="navigate('/')">Главная</a>
    <a href="/about" onclick="navigate('/about')">О нас</a>
    <a href="/contact" onclick="navigate('/contact')">Контакты</a>
</nav>

<div class="content" id="app-content">
    <!-- Здесь будет рендериться контент страницы -->
</div>

<script>
    // Объект маршрутов, где хранятся шаблоны страниц
    const routes = {
        '/': '<h1>Добро пожаловать!</h1><p>Это главная страница нашего приложения.</p>',
        '/about': '<h1>О нас</h1><p>Мы команда энтузиастов, увлечённых созданием полезных приложений.</p>',
        '/contact': '<h1>Контакты</h1><p>Свяжитесь с нами по адресу: example@example.com</p>'
    };

    // Функция для изменения контента страницы
    function renderPage(pathname) {
        const appContent = document.getElementById('app-content');
        appContent.innerHTML = routes[pathname] || '<h1>Страница не найдена</h4>';
    }

    // Навигационная функция
    function navigate(pathname) {
        history.pushState(null, '', pathname);
        updateUI();
    }

    // Обновляет UI в зависимости от пути
    function updateUI() {
        const currentPath = window.location.pathname;
        renderPage(currentPath);
        const links = document.querySelectorAll('nav a');
        links.forEach(link => link.classList.toggle('router-link-active', link.href.endsWith(currentPath)));
    }

    // Обработчик изменений в истории просмотров
    window.addEventListener('popstate', updateUI);

    // Первоначальная инициализация
    updateUI();
</script>

</body>
</html>
